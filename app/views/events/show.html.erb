<% provide(:title, @event.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= link_to current_user do %>
          <i class="glyphicon glyphicon-step-backward"></i> back
        <% end %>
      </h1>
      <h1>
        <i class="glyphicon glyphicon-tag"></i>
        <%= @event.title %>
      </h1>
    </section>
    <section class="date_form">
      <%= render 'shared/occurred_date_form', {event: @event} %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @event.occurred_dates.any? %>
      <h3><%= pluralize(@event.occurred_dates.count, "date") %></h3>
      <ol class="events">
        <%= render @occurred_dates %>
      </ol>
      <%= will_paginate @occurred_dates %>
    <% end %>
  </div>
</div>
