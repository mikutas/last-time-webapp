<% provide(:title, 'My events') %>
<div class="row">
  <aside class="col-4">
    <section class="user_info">
      <h1>
        <div class='fa fa-user'>
          <%= @user.email %>
        </div>
      </h1>
    </section>
    <section class="event_form">
      <%= render 'shared/event_form', {user: @user} %>
    </section>
  </aside>
  <div class="col-8">
    <%= render 'shared/search_event_form' %>

    <% if @user.events.any? %>
      <h3><%= pluralize(@events.count, "event") %></h3>
      <ol class="events">
        <%= render @events %>
      </ol>
      <div class='d-flex flex-column align-items-center'>
        <%= will_paginate @events, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
      </div>
    <% end %>
  </div>
</div>
