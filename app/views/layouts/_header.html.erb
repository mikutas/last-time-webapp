<header class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to "When is the last time?", root_path, class: "navbar-brand", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav mr-auto">
        <li><%= link_to "About",   about_path, class: "nav-link" %></li>
        <li><%= link_to "Help", '/help', class: "nav-link" %></li>
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Account
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li>
                <%= link_to user_events_path(current_user.id), class: "dropdown-item fa fa-calendar" do %>
                  My events
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(current_user), class: "dropdown-item fa fa-trash" do %>
                  Delete account
                <% end %>
              </li>
              <li class="dropdown-divider"></li>
              <li>
                <%= link_to logout_path, method: :delete, class: "dropdown-item fa fa-sign-out" do %>
                  Sign out
                <% end %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
