<header class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to "When is the last time?", root_path, class: "navbar-brand", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav mr-auto">
        <li>
          <%= link_to about_path, class: "nav-link" do %>
            <span class="fa fa-info-circle"> About</span>
          <% end %>
        </li>
        <li>
          <%= link_to "https://github.com/tkms0106/last-time-webapp/blob/master/README.md", class: "nav-link" do %>
            <span class="fa fa-question-circle"> Help</span>
          <% end %>
        </li>
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="fa fa-user-circle"> Account</span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li>
                <%= link_to user_events_path(current_user.id), class: "dropdown-item" do %>
                  <span class="fa fa-calendar"> My events</span>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(current_user), class: "dropdown-item" do %>
                  <span class="fa fa-exclamation-triangle"> Delete account</span>
                <% end %>
              </li>
              <li class="dropdown-divider"></li>
              <li>
                <%= link_to logout_path, method: :delete, class: "dropdown-item" do %>
                  <span class="fa fa-sign-out"> Sign out</span>
                <% end %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
