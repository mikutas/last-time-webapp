<%= form_tag user_events_path(@user.id), method: :get, class: "form-group" do %>
  <div class="row">
    <div class="col-10">
      <%= text_field :event, :term, class: "form-control" %>
    </div>
    <div class="col-2">
      <%= button_tag type: "submit", name: nil, class: "btn btn-info" do %>
        <i class="fa fa-search"></i> Search
      <% end %>
    </div>
  </div>
<% end %>
